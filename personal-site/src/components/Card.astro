---
export type Props = {
    to: string
    title: string
    gradientFrom: string
    gradientTo: string
}

const { to, title, gradientTo, gradientFrom } = Astro.props
---

<a href={to} class="card">
    <div class="card__inner">
        <div class="card__title">{title}</div>
        <div class="card__footer">&rarr;</div>
    </div>
</a>

<style define:vars={{ gradientFrom, gradientTo }}>
    .card {
        background-image: linear-gradient(
            to right,
            var(--gradientFrom),
            var(--gradientTo)
        );
        --radius: 10px;

        padding: 4px;
        border-radius: var(--radius);
        text-decoration: none;
        transform-origin: all 0.2s ease-in-out;
    }

    .card:hover {
        transform: scale(0.05);
    }

    .card__inner {
        background: var(--background);
        padding: 1.5rem;
        border-radius: var(--radius);
        display: flex;
        flex-direction: column;
    }

    .card__footer {
        margin: auto 0 0 auto;
        padding-top: 1.2rem;
        font-size: 1.2rem;
        color: var(--grey-900);
    }

    .card__title {
        font-size: 1.2rem;
        color: var(--grey-900);
        font-weight: 500;
        line-height: 2.75rem;
    }
</style>
