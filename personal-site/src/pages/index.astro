---
import Main from '../layouts/Main.astro'
const profilePicture = 'https://i.imgur.com/JPGFE75.jpg'
---

<Main>
    <div class="profile">
        <img
            alt="profile picture website"
            width="100px"
            height="100px"
            class="profile__picture"
            src={profilePicture}
        />

        <div class="profile__details">
            <h1>Brian Burnett</h1>
            <h2>Software Engineer</h2>
            <p>Jeffrey Jeffrey Jeffrey</p>
        </div>
    </div>
</Main>

<style>
    .profile {
        display: flex;
        align-items: flex-start;
        flex-wrap: wrap;
        padding: 1rem 0 3rem 0;
    }

    .profile__details {
        flex: 1 0 300 px;
    }

    .profile__details > h1 {
        margin-top: 0;
    }

    .profile__picture {
        border-radius: 50%;
        margin: 0 2rem 1rem 0;
    }
</style>

